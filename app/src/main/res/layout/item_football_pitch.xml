<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pitch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/football_field" />

    <ImageView
        android:id="@+id/goalkeeper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/t_shirt"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toTopOf="@id/pitch"
        app:layout_constraintBottom_toBottomOf="@id/pitch"
        app:layout_constraintStart_toStartOf="@id/pitch"
        app:layout_constraintEnd_toEndOf="@id/pitch" />

    <ImageView
        android:id="@+id/defender"
        android:src="@drawable/t_shirt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toTopOf="@id/pitch"
        app:layout_constraintBottom_toBottomOf="@id/pitch"
        app:layout_constraintStart_toStartOf="@id/pitch"
        app:layout_constraintEnd_toEndOf="@id/pitch" />

    <ImageView
        android:id="@+id/leftMid"
        android:src="@drawable/t_shirt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintTop_toTopOf="@id/pitch"
        app:layout_constraintBottom_toBottomOf="@id/pitch"
        app:layout_constraintStart_toStartOf="@id/pitch"
        app:layout_constraintEnd_toEndOf="@id/pitch" />

    <ImageView
        android:id="@+id/rightMid"
        android:src="@drawable/t_shirt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintTop_toTopOf="@id/pitch"
        app:layout_constraintBottom_toBottomOf="@id/pitch"
        app:layout_constraintStart_toStartOf="@id/pitch"
        app:layout_constraintEnd_toEndOf="@id/pitch" />

    <ImageView
        android:id="@+id/forward"
        android:src="@drawable/t_shirt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toTopOf="@id/pitch"
        app:layout_constraintBottom_toBottomOf="@id/pitch"
        app:layout_constraintStart_toStartOf="@id/pitch"
        app:layout_constraintEnd_toEndOf="@id/pitch" />


</androidx.constraintlayout.widget.ConstraintLayout>